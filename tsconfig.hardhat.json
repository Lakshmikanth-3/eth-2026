{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "./hardhat.config.ts",
        "./contracts/**/*.ts",
        "./scripts/**/*.ts"
    ],
    "files": [
        "./hardhat.config.ts"
    ]
}